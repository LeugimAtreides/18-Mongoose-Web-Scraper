<div class="container.fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="jumbotron text-center content-alignment">
                <h1 class="display-4">Mongo NFL News Scraper</h1>
                <hr class="my-4">
                <p class="lead">A an application to gather news from around the league</h2>
            </div>
        </div>
    </div>
</div>

<div class="container.fluid">
    <div class="row">
        <div class="col-lg-12">
            {{#if exists}}
                {{> article-header/articleheader-block }}
            {{/if}}
            <ul class="list-group list-group-flush">
                {{#if exists}}
                    {{#each Article}}
                        {{> article/article-block }}
                    {{/each}}
                {{/if}}

                {{#unless exists}}
                    {{> scrape/scrape-block }}
                {{/unless}}
            </ul>
        </div>
    </div>
</div>